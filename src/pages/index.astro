---
import Hero from "@/components/layout/Hero.astro";
import TechStack from "@/components/layout/TechStack";
import { Card, CardContent } from "@/components/ui/card";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <main class="mx-auto max-w-7xl px-4 pb-12">
    <!-- Hero Section con hint visual -->
    <section
      id="hero"
      class="relative flex h-[70vh] flex-col items-center justify-center overflow-hidden"
    >
      <Hero />
    </section>

    <!-- Bento Grid -->
    <section
      id="bento"
      class="mx-auto mt-8 grid max-w-5xl scroll-mt-10 grid-cols-1 gap-4 md:grid-cols-3"
    >
      <!-- About -->
      <Card
        className="group cursor-pointer border-2 transition-all hover:border-cyan-500/50 hover:bg-gradient-to-br hover:from-cyan-500/5 hover:to-teal-500/5 md:col-span-2"
      >
        <a href="/about" class="block h-full">
          <CardContent className="flex items-center gap-6 py-8">
            <div class="text-left">
              <h3 class="mb-2 text-xl font-bold">Sobre mí</h3>
              <p class="text-muted-foreground text-sm leading-relaxed">
                Aqui habra que meter un texto mister wonderful, mas algún tipo
                de flechita en la card para indicar que si clicka lo llevara al
                about
              </p>
            </div>
          </CardContent>
        </a>
      </Card>

      <!-- Tech Stack -->
      <Card
        className="hover:border-primary/50 border-2 transition-all md:row-span-2"
      >
        <CardContent>
          <TechStack client:load />
        </CardContent>
      </Card>

      <!-- Docs -->
      <Card
        className="group hover:border-primary/50 cursor-pointer border-2 transition-all hover:bg-gradient-to-br hover:from-blue-500/5 hover:to-purple-500/5"
      >
        <a href="/docs" class="block h-full">
          <CardContent
            className="flex h-full flex-col items-center justify-center space-y-4 py-8 text-center"
          >
            <div class="transition-transform group-hover:scale-110">
              <img
                src="/assets/static/obsidian.svg"
                alt="Obsidian logo"
                class="mx-auto h-12 w-12 object-contain"
              />
            </div>

            <div>
              <h3 class="mb-1 text-lg font-bold">Documentación</h3>
              <p class="text-muted-foreground text-sm">guías y recursos</p>
            </div>
          </CardContent>
        </a>
      </Card>

      <!-- Vacio -->
      <Card className="border-2">
        <CardContent
          className="flex h-full flex-col items-center justify-center space-y-4 py-8 text-center"
        >
          <p class="text-muted-foreground text-sm">Y aquí que meto??</p>
        </CardContent>
      </Card>
    </section>
  </main>
</BaseLayout>
