---
import TechStack from "@/components/layout/TechStack";
import { Button } from "@/components/ui/button";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";
import { SocialsLinks } from "@/constants/socials";
import BaseLayout from "@/layouts/BaseLayout.astro";
import GithubIcon from "public/assets/static/github.svg";
import LinkedinIcon from "public/assets/static/linkedin.svg";
---

<BaseLayout>
  <main class="mx-auto mt-3 max-w-7xl px-4">
    <div
      class="grid auto-rows-[minmax(200px,auto)] grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4"
    >
      <!-- Presentación -->
      <Card className="md:col-span-2 lg:col-span-2 lg:row-span-1">
        <CardContent className="flex gap-6 pt-6">
          <img
            src="/assets/avatar.png"
            alt="Avatar"
            class="h-32 w-32 flex-shrink-0 rounded-full shadow-lg"
          />
          <div class="flex-1">
            <h2 class="mb-2 text-2xl font-bold">¡Hey! Soy Joaquín</h2>
            <p class="text-muted-foreground mb-3">Desarrollador</p>
            <p class="text-sm">
              Ta ta ta tatatata ta ta ta tara tara tara tarara. Ta ta ta
              tatatata ta ta ta tara tara tara tarara. Ta ta ta tatatata ta ta
              ta tara tara tara tarara.
            </p>
          </div>
        </CardContent>
      </Card>

      <!-- Documentación Dev -->
      <Card className="md:col-span-1 lg:col-span-1 lg:row-span-1">
        <CardHeader>
          <CardTitle>Documentación Dev</CardTitle>
          <CardDescription>Recursos compartidos</CardDescription>
        </CardHeader>
        <CardContent>
          <p>Guías y apuntes sobre desarrollo en Markdown.</p>
          <Button variant="link" className="mt-2 px-0" asChild>
            <a href="/docs">Ver docs →</a>
          </Button>
        </CardContent>
      </Card>

      <!-- Tech Stack -->
      <Card className="flex flex-col md:col-span-1 lg:col-span-1 lg:row-span-2">
        <CardContent>
          <TechStack client:load />
        </CardContent>
      </Card>

      <!-- +3 Años -->
      <Card className="flex items-center justify-center">
        <CardContent className="text-center">
          <p class="text-5xl font-bold">+3</p>
          <p class="text-muted-foreground mt-2 text-sm">Años</p>
        </CardContent>
      </Card>

      <!-- Card vacía con gradiente -->
      <Card
        className="relative overflow-hidden md:col-span-2 lg:col-span-2 lg:row-span-1"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-blue-500/10 to-purple-500/20"
        >
        </div>
      </Card>

      <!-- Card vacía con gradiente -->
      <Card
        className="relative overflow-hidden md:col-span-1 lg:col-span-1 lg:row-span-2"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-purple-500/10 to-pink-500/20"
        >
        </div>
      </Card>

      <!-- Card vacía con gradiente -->
      <Card
        className="relative overflow-hidden md:col-span-2 lg:col-span-2 lg:row-span-1"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-cyan-500/10 to-blue-500/20"
        >
        </div>
      </Card>

      <!-- Card vacía con gradiente -->
      <Card className="relative overflow-hidden">
        <div
          class="absolute inset-0 bg-gradient-to-br from-yellow-500/10 to-orange-500/20"
        >
        </div>
      </Card>

      <!-- GitHub -->
      <Card className="group hover:bg-accent cursor-pointer transition-colors">
        <a
          href={SocialsLinks.GitHub}
          target="_blank"
          rel="noopener noreferrer"
          class="flex h-full items-center justify-center"
        >
          <CardContent className="text-center">
            <GithubIcon class="mx-auto mb-2 h-16 w-16" />
            <p class="font-semibold">GitHub</p>
          </CardContent>
        </a>
      </Card>

      <!-- LinkedIn -->
      <Card className="group hover:bg-accent cursor-pointer transition-colors">
        <a
          href={SocialsLinks.LinkedIn}
          target="_blank"
          rel="noopener noreferrer"
          class="flex h-full items-center justify-center"
        >
          <CardContent className="text-center">
            <LinkedinIcon class="mx-auto mb-2 h-16 w-16" />
            <p class="font-semibold">LinkedIn</p>
          </CardContent>
        </a>
      </Card>

      <!-- Card vacía con gradiente -->
      <Card className="relative overflow-hidden">
        <div
          class="absolute inset-0 bg-gradient-to-br from-green-500/10 to-emerald-500/20"
        >
        </div>
      </Card>
    </div>
  </main>
</BaseLayout>
