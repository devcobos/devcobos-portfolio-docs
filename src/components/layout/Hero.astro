---
import { Badge } from "@/components/ui/badge";
import { SocialsList, type SocialItem } from "@/constants/socials";
import { getYearsOfExperience } from "@/lib/dateUtils";
import { SITE_CONFIG } from "@/config/site.config";
import { ArrowBigDownDash } from "lucide-react";

const yearsOfExperience = getYearsOfExperience(SITE_CONFIG.experienceStartDate);
---

<section
  class="from-muted to-background relative flex min-h-screen items-center justify-center overflow-hidden bg-gradient-to-b px-4 pt-14 sm:px-6 lg:px-8"
>
  <div class="relative z-0 mx-auto w-full max-w-4xl space-y-8 text-center sm:space-y-10">
    <!-- Avatar -->
    <div class="relative inline-block">
      <div
        class="from-primary/80 to-primary relative rounded-full bg-gradient-to-br p-1 shadow-2xl"
      >
        <img
          src={SITE_CONFIG.avatar}
          alt={SITE_CONFIG.displayName}
          class="border-background h-32 w-32 rounded-full border-4 object-cover shadow-xl sm:h-40 sm:w-40 md:h-48 md:w-48"
          loading="eager"
        />
      </div>
    </div>

    <!-- Title -->
    <div class="space-y-3 sm:space-y-4">
      <h1
        class="from-foreground via-primary to-foreground bg-gradient-to-r bg-clip-text text-4xl leading-tight font-bold text-transparent sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl"
      >
        {SITE_CONFIG.displayName}
      </h1>
      <p class="text-muted-foreground text-lg font-light sm:text-xl md:text-2xl">
        desarrollando<span class="text-primary ml-1 animate-pulse">...</span>
      </p>
    </div>

    <!-- Info badges using shadcn Badge -->
    <div class="flex flex-wrap justify-center gap-2 sm:gap-3">
      <Badge variant="outline" className="gap-2 px-3 py-1.5 text-xs sm:px-4 sm:py-2 sm:text-sm">
        <div class="bg-primary h-2 w-2 animate-pulse rounded-full"></div>
        {SITE_CONFIG.location}
      </Badge>

      <Badge variant="outline" className="px-3 py-1.5 text-xs sm:px-4 sm:py-2 sm:text-sm">
        <span class="text-primary font-bold">+{yearsOfExperience}</span> a√±os de experiencia
      </Badge>
    </div>

    <!-- Social links -->
    <div class="flex justify-center gap-3 sm:gap-4">
      {
        SocialsList.map((social: SocialItem) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={social.ariaLabel || social.label}
            class="border-input bg-background ring-offset-background hover:border-primary/50 hover:bg-accent hover:text-accent-foreground focus-visible:ring-ring inline-flex h-10 w-10 items-center justify-center rounded-full border text-sm font-medium transition-all duration-300 hover:scale-110 hover:shadow-lg focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:outline-none sm:h-12 sm:w-12"
          >
            <social.icon class="h-4 w-4 sm:h-5 sm:w-5" />
          </a>
        ))
      }
    </div>
  </div>
</section>
