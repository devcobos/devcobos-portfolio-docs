---
import { SocialsList } from "@/constants/socials";
import { SITE_CONFIG } from "@/config/site.config";
---

<footer class="border-border bg-background/50 border-t backdrop-blur-sm">
  <div class="mx-auto flex h-14 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <!-- Brand/Copyright -->
    <div class="text-muted-foreground text-xs sm:text-sm">
      Â© {new Date().getFullYear()}
      <span class="hidden sm:inline"> {SITE_CONFIG.displayName}</span>
      <span class="sm:hidden">DevCobos</span>
    </div>

    <!-- Social Links -->
    <div class="flex items-center gap-2 sm:gap-4">
      {
        SocialsList.map((social: any) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-foreground focus:text-foreground focus:ring-primary rounded-md p-1 transition-colors focus:ring-2 focus:ring-offset-2 focus:outline-none"
            aria-label={social.label}
          >
            <social.icon class="h-4 w-4 sm:h-5 sm:w-5" />
          </a>
        ))
      }
    </div>
  </div>
</footer>
