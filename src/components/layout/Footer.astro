---
import { SocialsList } from "@/constants/socials";
import { SITE_CONFIG } from "@/config/site.config";
import Section from "./Section.astro";
---

<footer class="border-border bg-background/50 mt-auto border-t backdrop-blur-sm">
  <Section class="flex h-10 items-center justify-between">
    <!-- Brand/Copyright -->
    <div class="text-muted-foreground text-xs">
      Â© {new Date().getFullYear()}
      {SITE_CONFIG.displayName}
    </div>

    <!-- Social Links -->
    <div class="flex items-center gap-1 sm:gap-2">
      {
        SocialsList.map((social: any) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-foreground focus:text-foreground focus:ring-primary rounded-md p-1 transition-colors focus:ring-2 focus:ring-offset-2 focus:outline-none"
            aria-label={social.label}
          >
            <social.icon class="h-3 w-3 sm:h-4 sm:w-4" />
          </a>
        ))
      }
    </div>
  </Section>
</footer>
