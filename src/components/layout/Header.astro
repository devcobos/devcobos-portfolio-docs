---
import Navigation from "@/components/layout/Navigation";
import ThemeToggle from "@/components/layout/ThemeToggle";
import { SITE_CONFIG } from "@/config/site.config";
---

<header
  transition:persist
  class="border-border bg-background/80 supports-[backdrop-filter]:bg-background/60 fixed top-0 right-0 left-0 z-50 border-b border-dotted backdrop-blur-md"
>
  <div class="mx-auto flex h-14 max-w-6xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <a
      href="/"
      class="group focus:ring-primary relative rounded-md text-lg font-bold transition-all hover:scale-105 focus:ring-2 focus:ring-offset-2 focus:outline-none"
    >
      <span class="text-foreground bg-clip-text"> {SITE_CONFIG.displayName} </span>
    </a>

    <div class="flex items-center gap-2">
      <Navigation client:load />
      <ThemeToggle client:load />
    </div>
  </div>
</header>
