---
import Navigation from "@/components/layout/Navigation";
import ThemeToggle from "@/components/layout/ThemeToggle";
---

<header
  transition:persist
  class="border-border bg-background/60 fixed top-0 right-0 left-0 z-50 border-b border-dotted backdrop-blur"
>
  <div class="mx-auto flex h-14 max-w-4xl items-center justify-between px-4">
    <a href="/" class="group relative text-lg font-bold transition-all hover:scale-105">
      <span class="bg-clip-text"> DevCobos </span>
    </a>

    <div class="flex items-center gap-2">
      <Navigation client:load />
      <ThemeToggle client:load />
    </div>
  </div>
</header>
