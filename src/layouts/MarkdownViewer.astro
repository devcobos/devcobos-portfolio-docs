---
import DownloadDropdown from "@/components/layout/DownloadDropdown";

interface Props {
  markdownContent: string;
  title: string;
}

const { markdownContent, title } = Astro.props;
---

<div class="mx-auto max-w-4xl px-4">
  <div class="mb-6 flex justify-end">
    <DownloadDropdown
      client:load
      markdownContent={markdownContent}
      title={title}
    />
  </div>

  <div
    id="markdown-content"
    class:list={[
      // Base prose
      "prose dark:prose-invert prose-lg max-w-4xl",

      // Headings
      "prose-headings:font-bold prose-headings:tracking-tight",
      "prose-h1:text-4xl prose-h1:mb-8 prose-h1:mt-12 prose-h1:pb-4 prose-h1:border-b prose-h1:border-border",
      "prose-h2:text-3xl prose-h2:mb-6 prose-h2:mt-10 prose-h2:pb-3 prose-h2:border-b prose-h2:border-border",
      "prose-h3:text-2xl prose-h3:mb-4 prose-h3:mt-8",
      "prose-h4:text-xl prose-h4:mb-3 prose-h4:mt-6",

      // Blockquotes
      "prose-blockquote:border-l-4 prose-blockquote:border-l-primary",
      "prose-blockquote:bg-muted/30 prose-blockquote:py-0.5 prose-blockquote:px-6",
      "prose-blockquote:rounded-r-lg prose-blockquote:font-mono-italic",
      "prose-blockquote:text-foreground/90",
    ]}
  >
    <slot />
  </div>
</div>
